	Date.prototype.toYYYYMMDD = function(){
		var i, res = [this.getFullYear(), this.getMonth() + 1, this.getDate()];
		
		for(i in res) res[i] = ((res[i] < 10) ? "0" : "") + res[i];
		return res.join("").toString();
	};

